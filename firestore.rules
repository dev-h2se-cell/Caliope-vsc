
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Reglas de Seguridad por Defecto
    // =================================
    // Denegar lectura y escritura a todas las colecciones por defecto.
    match /{document=**} {
      allow read, write: if false;
    }

    // =================================
    // Colección de Usuarios
    // =================================
    // Los usuarios solo pueden leer y actualizar su propio perfil.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // La creación se maneja a través de un flujo de backend seguro.
      allow create: if request.auth != null;
    }

    // =================================
    // Colección de Profesionales
    // =================================
    // Los profesionales solo pueden leer y actualizar su propio perfil.
    // Cualquiera puede leer la información pública de un profesional.
    match /professionals/{profId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == profId;
      // La creación se maneja a través de un flujo de backend seguro.
      allow create: if request.auth != null;
    }

    // =================================
    // Catálogos Públicos
    // =================================
    // Cualquiera puede leer los servicios y productos. La escritura es solo para admins (backend).
    match /services/{serviceId} {
      allow read: if true;
    }
    
    match /products/{productId} {
      allow read: if true;
    }

    // =================================
    // Citas y Reseñas
    // =================================
    // Los usuarios autenticados pueden crear citas y reseñas.
    // Solo pueden leer/modificar las suyas.
    match /appointments/{appointmentId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.professionalId == request.auth.uid);
    }

    match /reviews/{reviewId} {
      allow create: if request.auth != null;
      allow read: if true; // Permitir que todos lean las reseñas.
    }
  }
}
